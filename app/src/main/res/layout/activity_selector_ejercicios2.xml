<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectorEjerciciosActivity2"
    android:background="#EAACDEF6"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/Cabereca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Selector de Juego"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textFontWeight="900"
        android:background="@color/white"
        android:elevation="5dp"
        android:textSize="30dp"
        />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Cabereca"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFFFFF"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El MemoryTron"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="serif-monospace"
                            android:textFontWeight="900"
                            android:layout_marginVertical="5dp"
                            android:textSize="20dp"
                            />
                        <ImageButton
                            android:id="@+id/MemoryTron"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:src="@drawable/carta"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="El CalculaTron"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="serif-monospace"
                        android:textFontWeight="900"
                        android:layout_marginVertical="5dp"
                        android:textSize="20dp"
                        />
                        <ImageButton
                            android:id="@+id/CalculaTron"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:src="@drawable/carta"
                            android:adjustViewBounds="true"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="15dp"

                            />

                </LinearLayout>

            </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>