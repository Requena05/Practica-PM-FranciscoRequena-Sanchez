<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FCE4EC"
    android:padding="15dp"
    >
    <LinearLayout
        android:id="@+id/Cabereca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="5dp"
        android:background="#DCFFFFFF"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/carta"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="       Juego Parejas         "
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textFontWeight="900"
            android:textSize="30dp"

            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cabereca"
        app:layout_constraintBottom_toTopOf="@id/cartas"
        android:gravity="center"
        android:text="Reiniciar"
        android:background="#2FDB36"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textFontWeight="900"
        android:textSize="25dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/vidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cabereca"
        app:layout_constraintBottom_toTopOf="@id/cartas"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/vida1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/vidas1"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"

            />
        <ImageView
            android:id="@+id/vidaperdida1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/vidas"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"
            android:visibility="gone"
            />





        <ImageView
            android:id="@+id/vida2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/vidas1"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"

            />
        <ImageView
            android:id="@+id/vidaperdida2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/vidas"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"
            android:visibility="gone"
            />



        <ImageView
            android:id="@+id/vida3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/vidas1"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"

            />
        <ImageView
            android:id="@+id/vidaperdida3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/vidas"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="30dp"
            android:visibility="gone"
            />



    </LinearLayout>


        <LinearLayout
            android:id="@+id/cartas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vidas"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="3dp"
            android:background="#FBE9E7"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp"

                >
                <ImageView
                    android:id="@+id/carta1"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta2"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta3"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta4"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp"

                >
                <ImageView
                    android:id="@+id/carta5"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta6"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta7"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta8"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="5dp"

                >
                <ImageView
                    android:id="@+id/carta9"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta10"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta11"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>
                <ImageView
                    android:id="@+id/carta12"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:src="@drawable/carta"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="5dp"/>

            </LinearLayout>




        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>